#include <XView.tmpl>

XCOMM #########################################################################
XCOMM # @(#)Imakefile	1.6 28 Jun 1993 SMI
XCOMM # Imakefile for doc/config/usenixws files.

TROFF= ptroff -t
DOCFILES = paper.ms 
DOCUMENT = paper.ps

ALLFILES = $(DOCFILES) 

all:: $(DOCUMENT)

paper.lpt:  $(DOCFILES)
	 tbl $(DOCFILES) | nroff -ms >$@

paper.ps:  $(DOCFILES)
	tbl $(DOCFILES) | $(TROFF) -ms >$@	

paper.txt:  $(DOCFILES)
	tbl $(DOCFILES) | nroff -ms | colcrt >$@

clean::
	rm -f *~ \#* *.bak errs 

install::
	$(MKDIRHIER) $(DESTDIR)$(DOC_DEST) 

InstallNonExecList($(DOCFILES),$(DOC_DEST))
PopulateSCCSTree(h,$(ALLFILES))
DependTarget()

